    #main-content
      .selected-group
        .selected-group__name 
          = @group.name
        .selected-group__members Members : sotatakahara

        .selected-group__edit-box 
          - @groups.each do |group|
            = link_to edit_group_path(group) do
              .selected-group__edit-box__text Edit
